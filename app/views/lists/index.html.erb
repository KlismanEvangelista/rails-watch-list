<div class="container">
  <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
    <h1>My lists</h1>
    <%=  link_to "Create a movie list", new_list_path, class: "btn btn-success"%>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url('<%= @list.photo.attached? ? cl_image_path @list.photo.key : image_tag("sinimagen.jpg") %>'); background-size: cover;" >
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>

