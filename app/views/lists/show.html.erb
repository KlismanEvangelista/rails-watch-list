<div class="container">
  <br>
  <% image_url = @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path("sinimagen.jpg") %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_url %>'); background-size: cover;">
    <div class="container">
      <h1>Bienvenidos a la lista de pel√≠culas de <strong><%= @list.name %></strong></h1>
      <p>A short description.</p>
      <%= link_to 'Editar nombre lista', edit_list_path(@list), class: "btn btn-success" %>
    </div>
  </div>

  <br>

  <div class = "d-flex justify-content-finish align-items-center">
    <%= link_to 'Add Movie', new_list_bookmark_path(@list), class: "btn btn-success" %>
  </div>
  <br>

  <div class="d-flex justify-content-around align-items-center">
    <% @list.movies.each do |movie| %>
      <div class="card-trip">
        <img src= "<%= movie.poster_url %>" />
        <div class="card-trip-infos">
          <div>
            <h2><%= movie.title %></h2>
            <p><%= movie.overview %></p>
          </div>
            <h2 class="card-trip-pricing"><%= movie.rating %></h2>
        </div>
      </div>
    <% end %>
  </div>

</div>
<br>
